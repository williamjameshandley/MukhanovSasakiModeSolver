# GCC flags

CXX = g++ -ggdb
FC = gfortran
LD = $(CXX)

CXXFLAGS += -std=c++11

# Debugging
CXXFLAGS += -pg -O0 -pedantic -Wall -Wextra -Wcast-align -Wcast-qual -Wctor-dtor-privacy -Wdisabled-optimization -Wformat=2 -Winit-self -Wlogical-op -Wmissing-declarations -Wmissing-include-dirs -Wnoexcept -Wold-style-cast -Woverloaded-virtual -Wredundant-decls -Wshadow -Wsign-conversion -Wsign-promo -Wstrict-null-sentinel -Wstrict-overflow=5 -Wswitch-default -Wundef -Wno-unused -Wconversion -Weffc++ -Wfatal-errors -ftemplate-backtrace-limit=0 #-Werror 

# Optimised
#CXXFLAGS += -O3 -DEIGEN_NO_DEBUG -DEIGEN_DONT_PARALLELIZE
FFLAGS += -O3

# Profiling
CXXFLAGS += -pg

# Shared object
CXXFLAGS += -fPIC
FFLAGS += -fPIC

LDFLAGS += -lgfortran
