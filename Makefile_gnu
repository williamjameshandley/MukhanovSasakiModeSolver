#FFLAGS +=  -g -O0 -fbacktrace -ffpe-trap=zero,overflow  



# Optimised
CXXFLAGS += -O3 -DEIGEN_NO_DEBUG -DEIGEN_DONT_PARALLELIZE
CFLAGS += -O3
FFLAGS += -O3

# Profiling
CXXFLAGS += -pg
CFLAGS += -pg
FFLAGS += -pg

# Shared object
CXXFLAGS += -fPIC
CFLAGS += -fPIC
FFLAGS += -fPIC

LDFLAGS += -lgfortran
